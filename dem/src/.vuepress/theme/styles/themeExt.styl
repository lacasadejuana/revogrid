html, body
  // background-color: #f6f9fc !important

.demo-page-class
  .theme-default-content:not(.custom)
    max-width: 1200px

#global-layout
  .navbar 
    box-shadow: rgba(53, 64, 82, 0.05) 0 1px 0 0
    border-bottom: 0

    .logo
      height: 2.9rem
      margin-top: -6px

  .search-box
    margin-right: 5rem


    input
      border-radius: 1rem
      background-size: 0.8rem
      border: 1px solid transparent
      background-color: rgba(black, 5%)
      height: 2.3rem
      width: 15rem
      background-position-y: center
      transition: all .1s ease-in-out

      &:focus
        border-color: #4dabf7
        outline: none
        box-shadow: inset 0 1px 1px rgba(black,0.1), 0 0 8px rgba(34,139,230,0.5)